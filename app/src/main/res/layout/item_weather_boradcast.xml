<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    

    <TextView
        android:id="@+id/itemCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>
        
    <Button
        android:id="@+id/itemDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintStart_toEndOf="@+id/itemCityName"
        app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
        android:id="@+id/itemCityTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemCityName"/>
    
    <TextView
        android:id="@+id/itemCityWindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/itemCityTemp"
        app:layout_constraintTop_toBottomOf="@+id/itemCityName"/>

</androidx.constraintlayout.widget.ConstraintLayout>
